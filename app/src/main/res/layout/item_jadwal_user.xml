<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gambarAcara_iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/namaAcara_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Nama Acara"
        app:layout_constraintStart_toEndOf="@+id/gambarAcara_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/deskripsiAcara_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Deskripsi SIngkat"
        app:layout_constraintStart_toEndOf="@+id/gambarAcara_iv"
        app:layout_constraintTop_toBottomOf="@+id/namaAcara_tv" />

    <ImageView
        android:id="@+id/iconWaktu_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/gambarAcara_iv"
        app:layout_constraintTop_toBottomOf="@+id/deskripsiAcara_tv"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/waktuAcara_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="Waktu Acara"
        app:layout_constraintBottom_toBottomOf="@+id/iconWaktu_iv"
        app:layout_constraintStart_toEndOf="@+id/iconWaktu_iv"
        app:layout_constraintTop_toTopOf="@+id/iconWaktu_iv" />

    <View
        android:id="@+id/divider2"
        android:layout_width="368dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gambarAcara_iv" />
</android.support.constraint.ConstraintLayout>